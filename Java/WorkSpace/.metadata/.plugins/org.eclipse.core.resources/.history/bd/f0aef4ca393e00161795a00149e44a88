package task2;

import com.sun.org.apache.xerces.internal.impl.dv.xs.DecimalDV;

public class GSM {
	public String model;
	private boolean hasSIMCard;
	private SIM simCard;
	private String simMobileNumber;
	
	public boolean getHasSIMCard(){
		return this.hasSIMCard;
	}
	
	public void insertSIMCard(SIM newSIMCard){
		this.simCard = newSIMCard;
		this.hasSIMCard = true;
		this.simMobileNumber = this.simCard.getNumber();
		System.out.println(this.model+"> New SIM card inserted. Your number is: "+this.simMobileNumber);
	}
	
	public void removeSIMCard() {
		this.simCard = null;
		this.hasSIMCard = false;
		this.simMobileNumber = "No number";
		System.out.println(this.model+"> SIM card remouved. Your have no number.");
	}
}
