package Task2;

public class Student {
	private String name;
	private String subject;
	private double grade;
	private int yearInCollege;
	private int age;
	private boolean isDegree;
	private double money;

	public Student() {
		this.grade = 4;
		this.yearInCollege = 1;
		this.isDegree = false;
		this.money = 0;
	}

	public Student(String name, String subject, int age) throws Exception {
		this();
		this.name = name;
		this.subject = subject;
		if(age <0){ throw new Exception("Years must be positive");}
		this.age = age;
	}

}
